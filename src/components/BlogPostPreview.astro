---
import FormattedDate from "./FormattedDate.astro";

const { url, title, excerpt, date } = Astro.props;
---

<article class="h-entry" itemscope itemtype="https://schema.org/BlogPosting" itemid=`${Astro.site}${url.substring(1)}`>
  <h2 class="p-name" itemprop="name"><a class="u-url" href={url}>{title}</a></h2>
  <p class="p-summary text-3xl" itemprop="abstract">{excerpt}</p>
  <p class="text-lg"><FormattedDate date={date} classes="dt-published" itemprop="datePublished" /></p>
</article>
<hr>
